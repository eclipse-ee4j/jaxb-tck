<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
 			targetNamespace="clazz/name" jaxb:version="3.0"
 			xmlns:jaxb="https://jakarta.ee/xml/ns/jaxb"
 			xmlns:test="clazz/name">

  <xsd:annotation>
   <xsd:documentation>
    Test verifies constraint of class customization.
   </xsd:documentation>
  </xsd:annotation>

  <xsd:group name="res">
    <xsd:sequence>
      <xsd:choice>
        <xsd:element name="ID"   type="xsd:integer"/>
        <xsd:element name="GUID" type="xsd:string"/>
      </xsd:choice>
      <xsd:element name="name" type="xsd:string"/>
      <xsd:element name="type" type="xsd:string"/>
    </xsd:sequence>
  </xsd:group>

  <xsd:element name="InternalResource" type="test:InternalResourceType"/>
  
  <xsd:complexType name="InternalResourceType">
    <xsd:sequence>
    	<xsd:group ref="test:res">
		    <xsd:annotation>
		      <xsd:appinfo>
		        <jaxb:class name="Resource"></jaxb:class>
		      </xsd:appinfo>
		    </xsd:annotation>
    	</xsd:group>
    	<xsd:element name="note" type="xsd:string"/>
    </xsd:sequence>	
  </xsd:complexType>
  

</xsd:schema>


<xsd:schema  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
			 targetNamespace="clazz/name" 
			 jaxb:version="3.0"
			 xmlns:jaxb="https://jakarta.ee/xml/ns/jaxb"
			 xmlns:test="clazz/name">

  <xsd:annotation>
   <xsd:documentation>
    Test verifies constraint of class customization.
   </xsd:documentation>
  </xsd:annotation>

  <xsd:element name="USAddress" type="test:USAddressType"></xsd:element>
  
  <xsd:element name="resID">
	 <xsd:complexType>
	    <xsd:sequence>
	      <xsd:choice>
	        <xsd:element name="ID"   type="xsd:integer"/>
	        <xsd:element name="GUID" type="xsd:string"/>
	      </xsd:choice>
	      <xsd:element name="name" type="xsd:string"/>
	      <xsd:element name="type" type="xsd:string"/>
	    </xsd:sequence>
	  </xsd:complexType>
 </xsd:element>
 
  
  <xsd:complexType name="USAddressType">
    <xsd:sequence>
      <xsd:element ref="test:resID" minOccurs="1" maxOccurs="1">
	    <xsd:annotation>
	      <xsd:appinfo>
	        <jaxb:class name="id"></jaxb:class>
	      </xsd:appinfo>
	    </xsd:annotation>
      </xsd:element>
      <xsd:element name="street" type="xsd:string"/>
      <xsd:element name="city"   type="xsd:string"/>
      <xsd:element name="state"  type="xsd:string"/>
      <xsd:element name="zip"    type="xsd:decimal"/>
    </xsd:sequence>
    <xsd:attribute name="country" type="xsd:NMTOKEN" fixed="US"/>
  </xsd:complexType>
</xsd:schema>


<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
 targetNamespace="globalBindings/mapSimpleTypeDef" jaxb:version="3.0"
 xmlns:jaxb="https://jakarta.ee/xml/ns/jaxb"
 xmlns:test="globalBindings/mapSimpleTypeDef">

 <xsd:annotation>
  <xsd:appinfo>
   <jaxb:globalBindings mapSimpleTypeDef="true" />
  </xsd:appinfo>
 </xsd:annotation>

 <xsd:annotation>
  <xsd:documentation>
   Test verifies generation of JAXB mapped class for simple type if
   mapSimpleTypeDef customization is true. (See specification CODE
   EXAMPLE 6-10 )
  </xsd:documentation>
 </xsd:annotation>

 <xsd:element name="bill">
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref="test:product" maxOccurs="unbounded"></xsd:element>
   </xsd:sequence>
  </xsd:complexType>
 </xsd:element>
 <xsd:element name="product">
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element name="name" type="xsd:string" />
    <!-- element price subject to type substitution -->
    <xsd:element name="price" type="xsd:int">
     <xsd:annotation>
      <xsd:appinfo>
       <jaxb:property>
        <jaxb:baseType name="java.lang.Object" />
       </jaxb:property>
      </xsd:appinfo>
     </xsd:annotation>
    </xsd:element>
   </xsd:sequence>
  </xsd:complexType>
 </xsd:element>
 <xsd:complexType name="AmountType">
  <xsd:simpleContent><!-- type substitutable for xs:int -->
   <xsd:extension base="xsd:int">
    <xsd:attribute name="currency" type="xsd:string" />
   </xsd:extension>
  </xsd:simpleContent>
 </xsd:complexType>
 <xsd:simpleType name="AppInt">
  <xsd:restriction base="xsd:int" />
 </xsd:simpleType>
</xsd:schema>

